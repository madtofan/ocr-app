{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ocr-app",
  "version": "0.1.0",
  "identifier": "com.ahmadzainulabidin.ocr-app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "LangCapture",
        "width": 1024,
        "height": 768,
        "maximized": true
      },
      {
        "label": "overlay",
        "url": "/overlay",
        "title": "Overlay",
        "visible": false,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "width": 1024,
        "height": 768,
        "maximized": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
